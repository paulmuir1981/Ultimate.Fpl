@page
@model Ultimate.Fpl.Ui.Pages.MyTeam.SetModel
@{
    ViewData["Title"] = "Set My Team";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>To identify your Team ID, log onto the main Fantasy Premier League site and access your team. Click the 'Points' tab. Your Team ID is the number located between 'entry' and 'event' in the Address Location Bar box near the top of your browser screen.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <input asp-for="TeamId" class="form-control" />
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Set Team ID" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}